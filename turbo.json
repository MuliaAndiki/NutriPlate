{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"],
      "env": [
        "AUTH_SECRET_KEY",
        "GOOGLE_CLIENT_SECRET",
        "CHOKIDAR_USEPOLLING",
        "BUN_HOT_RELOAD"
      ]
    }
  }
}
